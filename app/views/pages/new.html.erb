<h1>New page</h1>



<%= form_for(@page) do |f| %>
    <p>
      <b>Name</b><br />
      <%= f.text_field :name %>
    </p>

    <p>
      <b>Title</b><br />
      <%= f.text_field :title %>
    </p>

    <p>
      <b>Body</b><br />
      <%= f.text_area :body %>
    </p>

    <p>
      <b>Admin?</b><br />
      <%= f.check_box :admin %>
    </p>

    <p>
      <%= f.submit "Create" %>
    </p>
<% end %>

<%= link_to 'Back', pages_path %>
